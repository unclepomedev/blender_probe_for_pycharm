<idea-plugin>
    <id>com.github.unclepomedev.blenderprobeforpycharm</id>
    <name>Blender Probe</name>
    <vendor>unclepomedev</vendor>

    <description><![CDATA[
      Connects PyCharm with a running Blender instance.<br>
      Allows hot-reloading of addons, generating stub files, and executing tests directly from PyCharm.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <actions>
        <action id="com.github.unclepomedev.blenderprobeforpycharm.actions.GenerateStubsAction"
                class="com.github.unclepomedev.blenderprobeforpycharm.actions.GenerateStubsAction"
                text="Regenerate Blender Stubs"
                description="Generates .pyi stubs from a live Blender instance">

            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="com.github.unclepomedev.blenderprobeforpycharm.actions.PingBlenderAction"
                class="com.github.unclepomedev.blenderprobeforpycharm.actions.PingBlenderAction"
                text="Ping Blender Probe"
                description="Check connection to Blender Probe server">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="com.github.unclepomedev.blenderprobeforpycharm.actions.ReloadAddonAction"
                class="com.github.unclepomedev.blenderprobeforpycharm.actions.ReloadAddonAction"
                text="Reload Addon in Blender"
                description="Deep reloads the current addon in the running Blender instance">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift R"/>
        </action>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Blender Probe Notification Group"
                           displayType="BALLOON"/>
        <projectService
                serviceImplementation="com.github.unclepomedev.blenderprobeforpycharm.settings.BlenderSettings"/>
        <projectService
                serviceImplementation="com.github.unclepomedev.blenderprobeforpycharm.services.BlenderStubService"/>
        <projectConfigurable
                parentId="tools"
                instance="com.github.unclepomedev.blenderprobeforpycharm.settings.BlenderSettingsConfigurable"
                id="com.github.unclepomedev.blenderprobeforpycharm.settings.BlenderSettingsConfigurable"
                displayName="Blender Probe"/>
        <configurationType
                implementation="com.github.unclepomedev.blenderprobeforpycharm.run.BlenderTestConfigurationType"/>
        <lang.inspectionSuppressor language="Python"
                                   implementationClass="com.github.unclepomedev.blenderprobeforpycharm.inspection.BlenderPropertySuppressor"/>
        <directoryProjectGenerator
                implementation="com.github.unclepomedev.blenderprobeforpycharm.wizard.BlenderProjectGenerator"/>
        <configurationType
                implementation="com.github.unclepomedev.blenderprobeforpycharm.run.BlenderRunConfigurationType"/>
        <programRunner implementation="com.github.unclepomedev.blenderprobeforpycharm.run.BlenderRunner"/>
        <programRunner implementation="com.github.unclepomedev.blenderprobeforpycharm.run.BlenderTestRunner"/>
    </extensions>
    <projectListeners>
        <listener class="com.github.unclepomedev.blenderprobeforpycharm.BlenderSaveListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </projectListeners>
</idea-plugin>
